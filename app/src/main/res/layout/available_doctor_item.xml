<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctorDp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/doctor"/>

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/doctorDp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Test Doctor"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/specialistBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialist: "
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/specialistBanner"
        android:text="Cardio"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/verifiedTag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/doctorName"
        android:layout_toEndOf="@id/doctorDp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_verified_user_24"
        />

    <TextView
        android:id="@+id/degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBBS, MS"
        android:layout_below="@+id/doctorName"
        android:layout_toEndOf="@+id/verifiedTag"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/bookDoctor"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/degrees"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/doctorDp"
        android:background="#4D4DB1"
        android:text="Book for consultation"
        android:padding="5dp"
        android:textSize="13sp"
        android:textColor="#ffffff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#cccccc"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bookDoctor"/>

</RelativeLayout>